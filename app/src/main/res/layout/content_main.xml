<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.eli.android.pandashare.ui.main.MainActivity">

    <LinearLayout
        android:id="@+id/main_user_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center">

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/main_user_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/main_user_name_hint"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/main_user_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/main_user_send_txt"
        android:layout_below="@+id/main_user_name_layout"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/main_user_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_user_receive_txt"
        android:layout_below="@+id/main_user_send"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>